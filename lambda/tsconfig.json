{
  "include": ["src/**/*.ts", "tests/**/*"],
  "exclude": ["./node_modules", "./dist"],
  "compilerOptions": {
    "lib": ["ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@app": ["./src"],
      "@app/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    },
    "rootDir": ".",
    "outDir": "dist",
    "noEmit": true
  }
}
